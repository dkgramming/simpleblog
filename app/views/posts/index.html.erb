<div class="header">
  <div class="container">
    <h1>Posts</h1>
    <%= link_to 'New Post', {action: "new"} %>
  </div>
</div>

<div class="messages">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="post">
        <h2><%= post.title %></a></h2>
        <p><%= post.text %></p>
        <h3>Comments</h3>
        <ul>
        <% post.comments.each do |comment| %>
          <li><%= comment.comment %></li>
        <% end %>
        </ul>
        <a href="/comment/<%= post.id %>">Comment</a>
        <%= link_to 'Permalink', post %>
      </div>
    <% end %>
  </div>
</div>
